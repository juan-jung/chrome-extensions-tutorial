{
  "manifest_version": 3,
  "name": "auto save",
  "description": "auto saving user input Extension",
  "version": "1.0",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ]
}